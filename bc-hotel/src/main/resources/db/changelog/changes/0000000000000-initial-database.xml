<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet author="user" id="0000000000000-01">
        <createTable tableName="hotel">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="hotel_pkey"/>
            </column>
            <column name="version" type="SMALLINT">
                <constraints nullable="false"/>
            </column>            
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="user" id="0000000000000-02">
        <createTable tableName="room">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="room_pkey"/>
            </column>
            <column name="version" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="room_type_id" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="hotel_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="floor" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="room_number" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="available" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--indexes-->
    <changeSet author="user" id="0000000000000-10">
        <addUniqueConstraint columnNames="name" constraintName="hotel_name_uk" tableName="hotel"/>
    </changeSet>
    <changeSet author="user" id="0000000000000-11">
        <addUniqueConstraint columnNames="name" constraintName="room_name_uk" tableName="room"/>
    </changeSet>

    <!--    foreign keys-->
    <changeSet author="user" id="0000000000000-20">
        <addForeignKeyConstraint baseColumnNames="hotel_id" baseTableName="room" constraintName="room_hotel_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="hotel" validate="true"/>
    </changeSet>
</databaseChangeLog>
